{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment Settings */
    "module": "CommonJS",          // backend = CommonJS
    "target": "ES2020",            // modern Node
    "lib": ["ES2020"],
    "types": ["node"],             // include Node.js types

    /* Other Outputs */
    "sourceMap": true,
    "declaration": true,

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,       // needed for imports like "import express from 'express'"
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
